{
  "@context": [
    "https://bluebrain.github.io/nexus/contexts/neurosciencegraph/schema",
    {
      "this": "https://bluebrain.github.io/nexus/schemas/neurosciencegraph/trace/shapes/"
    }
  ],
  "@id": "https://bluebrain.github.io/nexus/schemas/neurosciencegraph/trace",
  "@type": "nxv:Schema",
  "imports": [
    "https://bluebrain.github.io/nexus/schemas/neurosciencegraph/entity",
    "https://bluebrain.github.io/nexus/schemas/neurosciencegraph/quantitativevalue",
    "https://bluebrain.github.io/nexus/schemas/neurosciencegraph/typedlabeledontologyterm"
  ],
  "shapes": [
    {
      "@id": "this:TraceShape",
      "@type": "sh:NodeShape",
      "label": "Electrophysiology trace shape definition. A trace should have an IRI as identifier",
      "targetClass": "nsg:Trace",
      "nodeKind": "sh:BlankNodeOrIRI",
      "and": [
        {
          "node": "https://bluebrain.github.io/nexus/schemas/neurosciencegraph/entity/shapes/EntityShape"
        },
        {
          "property": [
            {
              "path": "nsg:projectName",
              "name": "Project name",
              "description": "Name of the project that the trace was recorded for",
              "datatype": "xsd:string",
              "maxCount": 1
            },
            {
              "path": "nsg:channel",
              "name": "Channel",
              "description": "Channel number of trace",
              "datatype": "xsd:integer",
              "minCount": 1,
              "maxCount": 1
            },
            {
              "path": "nsg:retrievalDate",
              "name": "Retrieval date",
              "description": "Retrieval date of binary",
              "datatype": "xsd:dateTime",
              "maxCount": 1
            },
            {
              "path": "nsg:dataUnit",
              "name": "Data unit",
              "description": "Unit of the trace data (e.g. mV or pA)",
              "or": [
                {
                  "datatype": "xsd:string"
                },
                {
                  "node": "https://bluebrain.github.io/nexus/schemas/neurosciencegraph/typedlabeledontologyterm/shapes/UnitOntologyTermShape"
                }
              ],
              "maxCount": 1
            },
            {
              "path": "nsg:timeStep",
              "name": "Time step",
              "description": "Time step (inverted sampling frequency) of data",
              "node": "https://bluebrain.github.io/nexus/schemas/neurosciencegraph/quantitativevalue/shapes/QuantitativeValueShape",
              "maxCount": 1
            },
            {
              "path": "prov:qualifiedGeneration",
              "name": "Qualified generation",
              "description": "Qualified trace generation",
              "class": "nsg:TraceGeneration",
              "minCount": 1,
              "maxCount": 1
            },
            {
              "path": "prov:wasGeneratedBy",
              "name": "Was generated by",
              "description": "Stimulus experiment that generated trace",
              "class": "nsg:StimulusExperiment",
              "minCount": 1,
              "maxCount": 1
            }
          ]
        }
      ]
    }
  ]
}